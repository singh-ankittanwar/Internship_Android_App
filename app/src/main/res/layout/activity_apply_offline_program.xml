<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplyOfflineProgram">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <TextView
            android:id="@+id/tvnameApplyOffPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:text="Name*:"
            android:textColor="#000"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/etnameApplyOffPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvnameApplyOffPro"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/tvmobileApplyOffPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etnameApplyOffPro"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="Mobile*:"
            android:textColor="#000"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/etmobileApplyOffPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvmobileApplyOffPro"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/tvemailApplyOffPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etmobileApplyOffPro"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="Email*:"
            android:textColor="#000"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/etemailApplyOffPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvemailApplyOffPro"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/tvOrgApplyOffPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etemailApplyOffPro"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="Organization*:"
            android:textColor="#000"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/etOrgApplyOffPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrgApplyOffPro"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/tvMessageApplyOffPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etOrgApplyOffPro"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="Message:"
            android:textColor="#000"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/etMessageApplyOffPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMessageApplyOffPro"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="left"
            android:lines="3" />

        <Button
            android:id="@+id/btnSendOffProCustomerDetails"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etMessageApplyOffPro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:drawableRight="@drawable/ic_send"
            android:drawableTint="#4c84ff"
            android:text="Send  "
            android:textColor="#4c84ff"
            android:textSize="20dp" />

    </RelativeLayout>

</ScrollView>