<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/edName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:text="Event Name"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/edPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edName"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="#c0c0c0"
            android:padding="2dp"
            android:src="@drawable/sc_logo" />

        <TextView
            android:id="@+id/edDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edPoster"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="Description"
            android:textColor="#000" />

        <TextView
            android:id="@+id/edD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edDescription"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Date: "
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edDescription"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/edD"
            android:text="15/04/2017"
            android:textColor="#000" />

        <TextView
            android:id="@+id/edT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edD"
            android:layout_marginLeft="8dp"
            android:text="Time: "
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edD"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/edT"
            android:text="9am - 1pm"
            android:textColor="#000" />

        <TextView
            android:id="@+id/edV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edT"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Venue: "
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edT"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/edV"
            android:text="Bizwiz Learning, jhandewalan, new delhi - 110048"
            android:textColor="#000" />

        <Button
            android:id="@+id/edbtnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Register" />

    </RelativeLayout>

</ScrollView>